
<script>
  $('.font-cont-tastic-v2').children().click(function() {
    $( ".dynamic-font-append-v2" ).empty();
    var iconName = $(this).attr('class');
    var unchecked = $(".fontastic-container-v2 .font-cont-tastic-v2 div").not(iconName);
    $(unchecked).parent().css( "background-color", "white" );
    $(unchecked).css( "color", "grey" );
    var tempoAppend = $(this).clone();
    $(".dynamic-font-append-v2").append(tempoAppend);
    $(".dynamic-font-append-text").text(iconName);
    $(".info_icon input").val(iconName);
    $(this).parent().css( "background-color", "#2AC88E" );
    $(this).css( "color", "white" );
  });

</script>

<%= simple_form_for [@product.category, @product, @info] do |f| %>


  <script>
    var infoRubyName = "<%= "#{@info.icon}" %>";
    var tempoicon = $(".fontastic-container-v2 .<%= "#{@info.icon}" %>").clone();
    $(".dynamic-font-append-v2").append(tempoicon);
    $(".dynamic-font-append-text").text(infoRubyName);
  </script>



<div class="modal-header-custom">
