<div class="score-form-absolute">
  <div class="score-form-container">

    <div class="caret-custom-v2"></div>

    <%= simple_form_for([ category, product, score ], remote: true) do |form| %>


      <div class="range-slider">
        <input class="range-slider__range" type="range" value="1" min="1" max="10" step="1" name="score[value]" id="score_value">
        <span class="range-slider__value">1</span>
      </div>


      <div class="exclusive-display-flex">

        <%= form.button :button, class: "score-form-button" do %>
          <div class="sfbi-circle-green"><i class="icon-android-done score-form-big-icon-v3"></i></div>
          <div class="imp-green-button">Valider</div>
        <% end %>

        <div class="score-form-button">
          <div class="sfbi-circle"><i class="icon-android-close score-form-big-icon-v3"></i></div>
          <div class="imp-red-button">Annuler</div>
        </div>

      </div>

    <% end %>
  </div>
</div>
